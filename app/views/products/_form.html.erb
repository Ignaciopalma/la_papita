<button id="more">Add</button>
<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.fields_for :consumptions, @consumptions do |ff| %>
    <div id="add-ingredients">
      <h5>Add Ingredients</h5>
      
      <%= ff.select :supply_id, Supply.all.collect { |c| [ c.name, c.id ] }, {}, {class: "ingredients-select"}  %>
      <%= ff.number_field :consumption %>
    </div>
    <% end %>  
  
  <p>Category</p>
  <div class="field">
    <%= f.select :category_id, Category.all.collect { |c| [ c.name, c.id ] } %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :stock %><br>
    <%= f.number_field :stock %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
