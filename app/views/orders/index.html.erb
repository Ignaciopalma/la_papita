<section class="orders">
  <p id="notice"><%= notice %></p>
  <script>
    function removeNotice() {
      $('#notice')[0].remove();
    }
    $(document).ready(function(){
      window.setTimeout(removeNotice, 2000);    
    });
  </script>

  <h1>Ventas</h1>

  <div>
    <p>Total Bruto Mes</p>
    <%= @total_sales_this_month %>
  </div>

  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Cliente</th>
          <th>Medio de Pago</th>
          <th>Total</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr class="table-row">
            <td><%= order.id %></td>
            <td><%= order.client %></td>
            <td><%= order.payment_method %></td>
            <td><%= order.total %></td>
            <td><%= link_to 'Ver', order %></td>
            <td><%= link_to 'Editar', edit_order_path(order) %></td>
            <td><%= link_to 'Eliminar', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>  
  </div>
  
  <br>

  <%= link_to 'New Order', new_order_path %>  
</section>


