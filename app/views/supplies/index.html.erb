<section class="supplies">
  <p id="notice"><%= notice %></p>

  <h1>Insumos</h1>

  <%= form_tag directUpdate_supplies_path, method: :put do %>

  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Stock</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @supplies.each do |supply| %>
          <tr class="table-row">
            <td><%= supply.id %></td>
            <td><%= supply.name %></td>
            <td><%= supply.stock %></td>
            <td><%= link_to 'Show', supply %></td>
            <td><%= link_to 'Edit', edit_supply_path(supply) %></td>
            <td><%= link_to 'Destroy', supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>  
  </div>
  
    <%= submit_tag %>
  <% end %>
  <br>

  <%= link_to 'New Supply', new_supply_path %>  
</section>
