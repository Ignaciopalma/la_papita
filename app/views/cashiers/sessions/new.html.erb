<section class="cashiers-sign-in">
  <h2>Seleccionar Cajero</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label "Nombre" %><br />      
      <%= f.select :email, Cashier.all.collect { |c| [ c.name, c.email ] } %>
    </div>

    <div class="field">      
      <%= f.hidden_field :password, :value => '12345678' %>
    </div>

    <%# if devise_mapping.rememberable? -%>
      <!-- <div class="field"> -->
        <%#= f.check_box :remember_me %>
        <%#= f.label :remember_me %>
      <!-- </div> -->
    <%# end -%>

    <div class="actions">
      <%= f.submit "Abrir Caja" %>
    </div>
  <% end %>
  <%#= render "cashiers/shared/links" %>  
</section>
